<% excerpt ||= false %>

<div class="post_container<%= post.image? ? ' post_with_image' : '' %>" id="post-<%= post.id %>">
	<div class="post_header">
		<% if post.image? %>
			<div class="post_left_column">
				<%= image_tag post.image.url(:thumb) %>
			</div>
		<% end %>
		<div class="post_right_column">
			<%= post.title %>
		</div>
	</div>
	<div class="post_content">
		<div class="post_left_column">
			<div class="post_published_on">
				<%= t('blogel.labels.published_on') %>: <%= post.published_at %>
			</div>
		</div>
		<div class="post_right_column">
			<% if excerpt %>
				<%= post.excerpt(true) %>
				<%= link_to t('blogel.labels.view_more'), post_path(post) %>
			<% else %>
				<%= post.content %>
			<% end %>
		</div>
	</div>
	<div class="post_footer">
	</div>
</div>
